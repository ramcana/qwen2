# =============================================================================
# Development Environment Configuration Template
# =============================================================================
# Copy this file to .env for development environment
# Requirements: 4.2 - Environment-specific settings via environment variables
# =============================================================================

# Environment
NODE_ENV=development
DEBUG=true
LOG_LEVEL=DEBUG

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_TIMEOUT=300
MAX_REQUEST_SIZE=100MB

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility

# Cache Directories
HF_HOME=/app/cache/huggingface
TORCH_HOME=/app/cache/torch
DIFFSYNTH_CACHE_DIR=/app/cache/diffsynth
CONTROLNET_CACHE_DIR=/app/cache/controlnet

# Feature Flags
ENABLE_DIFFSYNTH=true
ENABLE_CONTROLNET=true
ENABLE_QWEN_EDIT=true
ENABLE_QWEN_IMAGE=true

# Development Security (Relaxed)
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
SECURE_COOKIES=false
HTTPS_ONLY=false

# Performance Settings (Development)
MEMORY_OPTIMIZATION=false
TILED_PROCESSING_THRESHOLD=1024
MAX_BATCH_SIZE=2
ATTENTION_OPTIMIZATION=false

# Cache Settings
CACHE_TTL=300
MODEL_CACHE_SIZE=2GB
ENABLE_REDIS_CACHE=false

# Development Debugging
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1
FLASK_DEBUG=1
REACT_APP_DEBUG=true
GENERATE_SOURCEMAP=true
FAST_REFRESH=true

# Frontend Development
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000/ws

# Logging Configuration
ACCESS_LOG=true
LOG_FORMAT=json

# Development Tools
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_TOOLBAR=true
ENABLE_PROFILER=false