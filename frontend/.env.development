# =============================================================================
# Development Environment Configuration
# =============================================================================

# Build Configuration
NODE_ENV=development
GENERATE_SOURCEMAP=true
SKIP_PREFLIGHT_CHECK=true
TSC_COMPILE_ON_ERROR=true
ESLINT_NO_DEV_ERRORS=true
DISABLE_ESLINT_PLUGIN=false

# Development Server Configuration
FAST_REFRESH=true
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true
WDS_SOCKET_HOST=0.0.0.0
WDS_SOCKET_PORT=3000

# API Configuration for Development
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_WS_URL=ws://localhost:8000/ws
REACT_APP_BACKEND_HOST=localhost
REACT_APP_BACKEND_PORT=8000

# Development-specific Features
REACT_APP_DEBUG=true
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=2.0.0-dev
REACT_APP_HOT_RELOAD=true

# Development Performance Settings
REACT_APP_ENABLE_PROFILER=true
REACT_APP_STRICT_MODE=true

# Development Security (relaxed for local development)
REACT_APP_CORS_ENABLED=true
REACT_APP_HTTPS_ONLY=false

# Development Logging
REACT_APP_LOG_LEVEL=debug
REACT_APP_CONSOLE_LOGS=true

# Development Build Optimizations (disabled for faster builds)
INLINE_RUNTIME_CHUNK=false
IMAGE_INLINE_SIZE_LIMIT=0
BUILD_PATH=build-dev