# =============================================================================
# Production Environment Configuration
# =============================================================================

# Build Configuration
NODE_ENV=production
GENERATE_SOURCEMAP=false
SKIP_PREFLIGHT_CHECK=true
TSC_COMPILE_ON_ERROR=false
ESLINT_NO_DEV_ERRORS=false
DISABLE_ESLINT_PLUGIN=false

# Production Build Optimizations
INLINE_RUNTIME_CHUNK=false
IMAGE_INLINE_SIZE_LIMIT=10000
BUILD_PATH=build

# API Configuration for Production (using nginx proxy)
REACT_APP_API_URL=/api
REACT_APP_WS_URL=/ws
REACT_APP_BACKEND_HOST=qwen-api
REACT_APP_BACKEND_PORT=8000

# Production-specific Features
REACT_APP_DEBUG=false
REACT_APP_ENVIRONMENT=production
REACT_APP_VERSION=2.0.0
REACT_APP_HOT_RELOAD=false

# Production Performance Settings
REACT_APP_ENABLE_PROFILER=false
REACT_APP_STRICT_MODE=false

# Production Security
REACT_APP_CORS_ENABLED=false
REACT_APP_HTTPS_ONLY=true

# Production Logging (minimal)
REACT_APP_LOG_LEVEL=error
REACT_APP_CONSOLE_LOGS=false

# Production Build Settings
CI=true
BUILD_OPTIMIZATION=true