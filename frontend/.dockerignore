# =============================================================================
# Optimized .dockerignore for Enhanced Build Performance
# =============================================================================

# Dependencies (will be installed in container)
node_modules
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.npm
.yarn/cache
.yarn/unplugged
.yarn/build-state.yml
.yarn/install-state.gz
.pnp.*

# Build outputs (will be generated in container)
build
dist
.cache
.parcel-cache
.next
.nuxt
.vuepress/dist

# Development and testing files
coverage
.nyc_output
.jest
.eslintcache
.stylelintcache
test-results
playwright-report

# IDE and editor files
.vscode
.idea
*.swp
*.swo
*~
.DS_Store
Thumbs.db

# OS generated files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

# Logs and temporary files
*.log
logs
*.pid
*.seed
*.pid.lock
.tmp
.temp

# Environment and configuration files (use build args instead)
.env
.env.local
.env.development.local
.env.test.local
.env.production.local

# Git and version control
.git
.gitignore
.gitattributes
.hg
.svn

# Documentation and non-essential files
README.md
CHANGELOG.md
LICENSE
*.md
docs/
.github/

# Docker files (not needed inside container)
Dockerfile*
docker-compose*.yml
.dockerignore

# CI/CD files
.travis.yml
.circleci/
.github/
.gitlab-ci.yml
azure-pipelines.yml
Jenkinsfile

# Package manager files (will use package.json and package-lock.json only)
yarn.lock
pnpm-lock.yaml
.pnpmfile.cjs

# Development tools
.eslintrc*
.prettierrc*
.stylelintrc*
.editorconfig
.browserslistrc

# Serverless and cloud functions
.serverless/
.fusebox/
.dynamodb/
.tern-port

# Testing
.vscode-test
__tests__/
**/*.test.js
**/*.test.ts
**/*.test.tsx
**/*.spec.js
**/*.spec.ts
**/*.spec.tsx

# Storybook
.storybook/
storybook-static/

# Miscellaneous
.vscode-test
.history/
