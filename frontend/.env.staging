# =============================================================================
# Staging Environment Configuration
# =============================================================================

# Build Configuration
NODE_ENV=production
GENERATE_SOURCEMAP=true
SKIP_PREFLIGHT_CHECK=true
TSC_COMPILE_ON_ERROR=false
ESLINT_NO_DEV_ERRORS=false
DISABLE_ESLINT_PLUGIN=false

# Staging Build Optimizations
INLINE_RUNTIME_CHUNK=false
IMAGE_INLINE_SIZE_LIMIT=10000
BUILD_PATH=build

# API Configuration for Staging
REACT_APP_API_URL=/api
REACT_APP_WS_URL=/ws
REACT_APP_BACKEND_HOST=qwen-api-staging
REACT_APP_BACKEND_PORT=8000

# Staging-specific Features
REACT_APP_DEBUG=true
REACT_APP_ENVIRONMENT=staging
REACT_APP_VERSION=2.0.0-staging
REACT_APP_HOT_RELOAD=false

# Staging Performance Settings
REACT_APP_ENABLE_PROFILER=true
REACT_APP_STRICT_MODE=true

# Staging Security (balanced)
REACT_APP_CORS_ENABLED=true
REACT_APP_HTTPS_ONLY=false

# Staging Logging (verbose for testing)
REACT_APP_LOG_LEVEL=info
REACT_APP_CONSOLE_LOGS=true

# Staging Build Settings
CI=true
BUILD_OPTIMIZATION=true