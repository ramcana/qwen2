FROM nvidia/cuda:12.1.1-cudnn-runtime-ubuntu22.04

ENV PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

RUN apt-get update && apt-get install -y --no-install-recommends \
    python3 python3-pip git && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY requirements.txt constraints.txt requirements.lock ./
RUN pip install -U uv && uv pip install -r requirements.txt -c constraints.txt

COPY . .
CMD ["python", "launch.py", "--mode", "enhanced"]
